<!DOCTYPE html>
<html>
<head>
  <div id="wrapper">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <%= render "shared/header" %>
    </nav>
  </div>
</head>
<body>
<div id="main-content">
        <div class="panel panel-default event_panel">
        <div class="panel-heading">
          <h3 class="panel-title"><%= I18n.t('tasks') %></h3>
        </div>
        <div class="panel-body">
          <div class="panel-body">
            <div class="table-responsive nbu">
              <%= form_for  [@user, Event.new] do |f| %>
                  <%= f.hidden_field :user_id, value: @user.id%>
                  <%= f.text_field :title, id: 'name', placeholder: 'название', class: 'form-control' %>
                  <%= f.text_field :start_time, id: 'name', placeholder: 'Конечная дата', class: "form-control datepicker" %>
                  <%= submit_tag "Сохранить", class: "btn btn-info", id: "update_user" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
</div>
  <%= month_calendar events: @meetings.each do |date, meetings| %>
      <%= date %>
      <% meetings.each do |meeting| %>
          <div>
            <%= meeting.title %>
          </div>
      <% end %>
  <% end %>
</body>
<script>
    $('.datepicker').datepicker({format: 'yyyy-mm-dd'});
</script>